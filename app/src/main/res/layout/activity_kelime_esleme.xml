<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".KelimeEslemeActivity">

    <LinearLayout
        android:id="@+id/soruBaslik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:background="@color/pembe"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewYanlis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"

            android:text="Yanlış : 0"
            android:textColor="@color/kirmizi"
            />

        <ImageView
            android:id="@+id/imgButtonileri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_ileri" />

        <TextView
            android:id="@+id/textViewDogru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Doğru : 0"
            android:textColor="@color/cardview_dark_background"
            android:textStyle="bold"
             />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/soruL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:background="@color/design_default_color_error"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textSoru"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:padding="5dp"
            android:text="Soru buraya gelecek"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:background="@color/yellow"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/cevap1L"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@color/yellow"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageCevap1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:srcCompat="@drawable/resim" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cevap2L"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@color/mor"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageCevap2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:srcCompat="@drawable/resim" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:background="@color/yellow"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/cevap3L"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="50"
            android:background="@color/mor"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageCevap3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:srcCompat="@drawable/resim" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cevap4L"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@color/yellow"

            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageCevap4"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:srcCompat="@drawable/resim" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>